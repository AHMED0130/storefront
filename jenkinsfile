pipeline {
    agent any
    environment {
        IMAGE_NAME = 'ahmed0130/store:4.0-snapshot'
    }
    stages {
        stage('Test') {
            steps {
                script {
                    echo "test the application......"
                }
            }
        }
        stage('Build image') {
            steps {
                script {
                    echo "build the app image "

                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials',
                        usernameVariable: 'USERNAME', passwordVariable: 'PASS')]) {
                        sh "docker build -t $IMAGE_NAME ."
                        sh 'echo $PASS | docker login -u $USERNAME --password-stdin'
                        sh "docker push $IMAGE_NAME"
                    }
                }
            }
        }
        stage('Deploy to aws') {
            steps {
                script {
                    echo "deploying the application to ec2 instance......."
                    def shellscript="bash ./script.sh ${IMAGE_NAME}"
                    def AWS_INSTANCE="ec2-user@13.51.162.88"
                    sshagent(['ec2-aws-server']) {
                        sh "scp -o StrictHostKeyChecking=no docker-compose.yml ${AWS_INSTANCE}:/home/ec2-user"
                        sh "scp -o StrictHostKeyChecking=no script.sh ${AWS_INSTANCE}:/home/ec2-user"
                        sh "ssh -o StrictHostKeyChecking=no ${AWS_INSTANCE} ${shellscript}"
                            }
                }
            }
        }


    }
}
