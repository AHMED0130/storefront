pipeline {
    agent any
    environment {
        IMAGE_NAME = 'ahmed0130/store:latest'
    }
    stages {
        stage('Test') {
            steps {
                script {
                    echo "test the application......"
                }
            }
        }
        stage('Build image') {
            steps {
                script {
                    echo "build the app image "

                    withCredentials([usernamePassword(credentialsId: 'dockerhub',
                        usernameVariable: 'USERNAME', passwordVariable: 'PASS')]) {
                        sh "docker build -t $IMAGE_NAME ."
                        sh 'echo $PASS | docker login -u $USERNAME --password-stdin'
                        sh "docker push $IMAGE_NAME"
                    }
                }
            }
        }
        stage('Deploy to linode') {
            steps {
                    environment {
                        DOCKERHUB_CRED = credentials('dockerhub')
                    }
                script {
                    echo "deploying the application to linode instance......."
                    def shellscript="bash ./script.sh ${IMAGE_NAME} ${DOCKERHUB_CRED_USR} ${DOCKERHUB_CRED_PSW}"
                    def LINODE_INSTANCE="root@172.104.252.70"
                    sshagent(['linode-server']) {
                        sh "scp -o StrictHostKeyChecking=no docker-compose.yml ${LINODE_INSTANCE}:/root"
                        sh "scp -o StrictHostKeyChecking=no script.sh ${LINODE_INSTANCE}:/root"
                        sh "ssh -o StrictHostKeyChecking=no ${LINODE_INSTANCE} ${shellscript}"
                            }
                }
            }
        }


    }
}
